{
    "compilerOptions": {
        "target": "es5",
        "module": "es2020",
        "moduleResolution": "node",
        "baseUrl": "./",
        "strict": true,
        // Enable strict type-checking options
        "skipLibCheck": true,
        // Skip type checking of declaration files
        "noImplicitAny": false
        // Bypass raising errors on `any` type
    },
    "exclude": [
        "../node_modules"
    ]
}


